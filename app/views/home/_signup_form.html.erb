<div class="row ">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "w-100"}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "w-100" %>
    </div>
    <br />
    <div class="field">
      <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "w-100" %>
    </div>
    <br />
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "w-100" %>
    </div>
    <br />

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "w-100" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password", class: "w-100" %>
    </div>
    <br />
    <div class="field">
      <%= f.text_area :bio, autofocus: true , placeholder: "Bio", class: "w-100"%>
    </div>


    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
